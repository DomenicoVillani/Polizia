<link href="~/css/editmulta.css" rel="stylesheet" />
﻿@{
    ViewData["Title"] = "Modifica Multa";
}

@model Verbale
<h1 class="madimi-one-regular text-center font-size-h1 mt-2">Modifica Multa</h1>
<form class="row g-3" asp-controller="Home" asp-action="EditMulta" method="post">
    <input type="hidden" asp-for="@Model.IDVerbale" />
    <div class="col-6">
        <label asp-for="@Model.IndirizzoViolazione" class="form-label madimi-one-regular size-font">Modifica Indirizzo violazione</label>
        <input type="text" class="form-control" asp-for="@Model.IndirizzoViolazione" required>
    </div>
    <div class="col-6">
        <label asp-for="@Model.Nominativo_Agente" class="form-label madimi-one-regular size-font">Modifica nominativo agente</label>
        <input type="text" class="form-control" asp-for="@Model.Nominativo_Agente" required>
    </div>
    <div class="col-6">
        <label asp-for="@Model.Importo" class="form-label madimi-one-regular size-font">Modifica importo multa</label>
        <input type="number" class="form-control" asp-for="@Model.Importo" placeholder="1234 Main St" required>
    </div>
    <div class="col-6">
        <label asp-for="@Model.DecurtamentoPunti" class="form-label madimi-one-regular size-font">Modifica Decurtamento punti</label>
        <input type="number" class="form-control" asp-for="@Model.DecurtamentoPunti" required>
    </div>
    <div class="d-flex justify-content-center my-5">
        <div>
            <button class="btn btn-success madimi-one-regular size-button">Apporta modifiche</button>
        </div>
    </div>

</form>
