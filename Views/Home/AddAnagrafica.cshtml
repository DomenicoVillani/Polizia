@{
    ViewData["Title"] = "Aggiungi anagrafica dell'infame che ha violato la legge";
}
@model Anagrafica

<h1 class="text-center my-4">Aggiungi anagrafica dell'infame che ha violato la legge</h1>

<form class="row g-3" asp-controller="Home" asp-action="AddAnagrafica" method="post">
    <div class="col-6">
        <label asp-for="@Model.Nome" class="form-label">Nome:</label>
        <input type="text" class="form-control" asp-for="@Model.Nome">
    </div>
    <div class="col-6">
        <label asp-for="@Model.Cognome" class="form-label">Cognome:</label>
        <input type="text" class="form-control" asp-for="@Model.Cognome">
    </div>
    <div class="col-12">
        <label asp-for="@Model.Indirizzo" class="form-label">Indirizzo: </label>
        <input type="text" class="form-control" asp-for="@Model.Indirizzo">
    </div>
    <div class="col-3">
        <label asp-for="@Model.Citta" class="form-label">Citta':</label>
        <input type="text" class="form-control" asp-for="@Model.Citta">
    </div>
    <div class="col-3">
        <label asp-for="@Model.CAP" class="form-label">CAP: </label>
        <input type="text" class="form-control" asp-for="@Model.CAP" maxlength="5" min="5">
    </div>
    <div class="col-6">
        <label asp-for="@Model.Cod_Fisc" class="form-label">Codice Fiscale</label>
        <input type="text" class="form-control" asp-for="@Model.Cod_Fisc" maxlength="16" min="16">
    </div>
    <div class="d-flex justify-content-center">
        <div>
            <button type="submit" class="btn btn-primary">Aggiungi criminale</button>
        </div>
    </div>
</form>